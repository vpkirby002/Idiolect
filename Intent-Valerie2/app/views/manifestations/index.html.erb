<p id="notice"><%= notice %></p>

<h1>Manifestations</h1>

<table>
  <thead>
    <tr>
      <th>Immediate</th>
      <th>Short term</th>
      <th>Long term</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<div class="form2">
  <tbody>
    <% @manifestations.each do |manifestation| %>
      <tr>
        <td><%= manifestation.immediate %></td>
        <td><%= manifestation.short_term %></td>
        <td><%= manifestation.long_term %></td>
        <td><%= link_to 'Show', manifestation %></td>
        <td><%= link_to 'Edit', edit_manifestation_path(manifestation) %></td>
        <td><%= link_to 'Destroy', manifestation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

    <% end %>

  </tbody>
</table>

<% form_for Manifestation.new do |form| %>
<div class="field">
    <%= form.label :immediate %>
    <%= form.text_field :immediate, id: :manifestation_immediate %>
  </div>

  <div class="field">
    <%= form.label :short_term %>
    <%= form.text_field :short_term, id: :manifestation_short_term %>
  </div>

  <div class="field">
    <%= form.label :long_term %>
    <%= form.text_field :long_term, id: :manifestation_long_term %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


<br>
</div>
<%= link_to 'New Manifestation', new_manifestation_path %>

